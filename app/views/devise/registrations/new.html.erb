<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= semantic_form_for(resource, :as => resource_name, :url => user_registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.label :company %>
          <%= f.text_field :company, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <br/>
      <div class="form-group">
        <div class="col-sm-4">
          <%= f.label :address1 %>
          <%= f.text_field :address1, class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <%= f.label :address2 %>
          <%= f.text_field :address2, class: "form-control" %>
        </div>
      </div>

      <div class="clearfix"></div>
      <br/>
      <div class="form-group">
        <div class="col-sm-4">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <%= f.label :state %>
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>

      <div class="clearfix"></div>
      <br/>
      <div class="form-group">
        <div class="col-sm-4">
          <%= f.label :country %>
          <div class="clearfix"></div>
          <%= country_select("user", "country", { priority_countries: ["US", "GB", "FR"], selected: "GB" }, { class: 'form-control col-sm-8', style:"width:300px;", data: { attribute: "value" } }) %>
        </div>
        <div class="col-sm-4">
          <%= f.label :postalcode %>
          <%= f.text_field :postalcode, class: "form-control" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <br/>
      <div class="form-group">
        <div class="col-sm-4">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <br/>
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>        
      </div>
      <div class="clearfix"></div>
      <br/>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
